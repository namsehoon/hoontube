mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, controls=true)
        .videPlayer__controls
            .videoPlayer__column
                span#jsVolumebutton
                    i.fas.fa-volume-up
                span
                    |00:00/10:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span
                    i.class.fas.fa-expand
            