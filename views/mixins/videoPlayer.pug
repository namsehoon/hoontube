mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, controls=true)
        .videPlayer__controls
            .videoPlayer__column
                input.videoPlayer__range#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumebutton
                    i.fas.fa-volume-up
                span#jsCurrentTime 00:00:00
                span /
                span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullscreen
                    i.fas.fa-book-open
            